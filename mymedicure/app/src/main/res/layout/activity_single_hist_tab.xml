<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.single_hist_tab">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView_1"
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:background="@drawable/bluerectangle"
            android:padding="15dp"
            app:type="one_day_picker"
            app:selectionColor="#aed581"
            android:layout_margin="5dp"
            />
        <RelativeLayout
            android:id="@+id/relative_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp"
            android:layout_below="@id/calendarView_1"
            android:background="@drawable/bluerectangle">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/medicine_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_alignParentTop="true"
                android:text="Name"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"

                android:textCursorDrawable="@null"
                android:textSize="@dimen/middle_text_size"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/medicine_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_toRightOf="@id/medicine_name_text"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="aaaaaa"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/middle_text_size"

                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/activity_margin"
                android:text="@string/task_date_default"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textCursorDrawable="@null"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/medicine_name_text"
                android:textSize="@dimen/middle_text_size"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/darkbluerectangle"
                android:gravity="center"
                android:textColor="@android:color/black" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/activity_margin"
                android:text="@string/task_date_default"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textCursorDrawable="@null"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/date_now"
                android:textSize="@dimen/middle_text_size"
                android:textStyle="bold"
                android:padding="15dp"
                android:background="@drawable/darkbluerectangle"
                android:gravity="center"
                android:textColor="@android:color/black" />








        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp"
            android:layout_below="@id/relative_2"
            android:background="@drawable/bluerectangle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/morning_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/morning_view_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:layout_marginEnd="@dimen/activity_margin"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:text="morning"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/morning_view_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wrong" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/afternoon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/afternoon_view_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:layout_marginEnd="@dimen/activity_margin"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:text="afternoon"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_afternoon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/afternoon_view_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wrong" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/evening_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/evening_view_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:layout_marginEnd="@dimen/activity_margin"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:text="evening"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_evening"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/evening_view_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wrong" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/night_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/night_view_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:layout_marginEnd="@dimen/activity_margin"
                        android:paddingLeft="15dp"
                        android:paddingBottom="5dp"
                        android:text="night"
                        android:textColor="@android:color/black"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_night"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/night_view_text"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/wrong" />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>