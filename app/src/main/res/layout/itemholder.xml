<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_list_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#65FFF59D"

    android:clickable="true"
    android:focusable="true"
    android:elevation="15dp"
    android:layout_margin="10dp"

    android:foreground="@drawable/selector">

    <RelativeLayout
        android:id="@+id/schedule_list_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:paddingTop="@dimen/medium_margin"
        android:paddingBottom="@dimen/medium_margin">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_list_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/schedule_list_time"
            android:ellipsize="end"
            android:fontFamily="@font/kgprimary"
            android:includeFontPadding="false"
            android:maxLines="1"


            android:paddingStart="@dimen/tiny_margin"
            android:paddingEnd="@dimen/tiny_margin"
            android:textColor="#EF5350"
            android:textCursorDrawable="@null"
            android:textSize="25sp"
            tools:text="Calculus"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_list_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_list_title"
            android:layout_toStartOf="@+id/schedule_list_time"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingStart="@dimen/tiny_margin"
            android:paddingEnd="@dimen/tiny_margin"
            android:textCursorDrawable="@null"
            android:fontFamily="@font/kgprimary"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            tools:text="S101"/>






        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/schedule_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/bigger_text_size"
            android:textColor="@android:color/black"
            tools:text="07:00 - 09.00"/>
        <ImageView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/schedule_list_time"
            android:background="@drawable/circle"
            android:gravity="center"
            android:elevation="4dp"

            android:text="100%"
            android:textColor="@color/white"
            android:textSize="20sp" />



    </RelativeLayout>

</FrameLayout>